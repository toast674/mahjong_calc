
<%= form_with(local: true, url: "/result") do |form| %>
    <div class="title">
        <h1>麻雀計算ツール</h1>
    </div>

    <%= select_tag(:game_type, options_for_select(['収支戦','順位戦'],[1,2])) %>
    <%= select_tag(:uma, options_for_select(['5-10','5-15','10-20','10-30','20-30','20-60'],[1,2,3,4,5,6])) %>
    <div class="genten">
        <%= select_tag(:genten, options_for_select(['25000点','30000点'],[1,2])) %>万点持ち
    </div>
    <div class="kaesiten">
      <%= select_tag(:kaesiten, options_for_select(['25000点','30000点'],[0,1])) %>万点返し
    </div>

    <div id="shuushisen"><!-- 収支戦の場合 -->
        <table>
            <tr>
                <td>
                    一位
                </td>
                <td>
                    <%= text_field_tag :shuushisen_score1 %>点
                </td>
                <td>
                    <%= text_field_tag :shuushisen_count1 %>回
                </td>
            </tr>
            <tr>
                <td>
                    二位
                </td>
                <td>
                    <%= text_field_tag :shuushisen_score2 %>点
                </td>
                <td>
                    <%= text_field_tag :shuushisen_count2 %>回
                </td>
            </tr>
            <tr>
                <td>
                    三位
                </td>
                <td>
                    <%= text_field_tag :shuushisen_score3 %>点
                </td>
                <td>
                    <%= text_field_tag :shuushisen_count3 %>回
                </td>
            </tr>
            <tr>
                <td>
                    四位
                </td>
                <td>
                    <%= text_field_tag :shuushisen_score4 %>点
                </td>
                <td>
                    <%= text_field_tag :shuushisen_count4 %>回
                </td>
            </tr>
        </table>
    </div>


    <div id="junisen"><!-- 順位戦の場合 -->
        <table>
            <tr>
                <td>
                    一位
                </td>
                <td>
                    <%= text_field_tag :junisen_score1 %>ポイント
                </td>
                <td>
                    <%= text_field_tag :junisen_count1 %>回
                </td>
            </tr>
            <tr>
                <td>
                    二位
                </td>
                <td>
                    <%= text_field_tag :junisen_score2 %>ポイント
                </td>
                <td>
                    <%= text_field_tag :junisen_count2 %>回
                </td>
            </tr>
            <tr>
                <td>
                    三位
                </td>
                <td>
                    <%= text_field_tag :junisen_score3 %>ポイント
                </td>
                <td>
                    <%= text_field_tag :junisen_count3 %>回
                </td>
            </tr>
            <tr>
                <td>
                    四位
                </td>
                <td>
                    <%= text_field_tag :junisen_score4 %>ポイント
                </td>
                <td>
                    <%= text_field_tag :junisen_count4 %>回
                </td>
            </tr>
        </table>
    </div>

    <%= submit_tag('送信') %>


<% end %>